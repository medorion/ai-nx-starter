{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve-web-ui",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "serve", "web-ui"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*$ ",
          "endsPattern": "\\s*Local:\\s*http://localhost:\\d+"
        }
      }
    },
    {
      "label": "build-web-ui",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "build", "web-ui"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "test-web-ui",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "test", "web-ui"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "lint-web-ui",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "lint", "web-ui"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
