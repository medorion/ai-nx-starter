{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Angular (web-ui) - Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/apps/web-ui/src",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**", "${workspaceFolder}/node_modules/**"],
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*"
      },
      "preLaunchTask": "serve-web-ui"
    },
    {
      "name": "Debug Angular (web-ui) - Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/apps/web-ui/src",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**", "${workspaceFolder}/node_modules/**"],
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*"
      }
    },
    {
      "name": "Debug Angular (web-ui) - Edge",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/apps/web-ui/src",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**", "${workspaceFolder}/node_modules/**"],
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*"
      },
      "preLaunchTask": "serve-web-ui"
    }
  ]
}
